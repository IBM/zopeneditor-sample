{
    "$schema": "./zowe.schema.json",
    "profiles": {
        "{{ host }}": {
            "properties": {
                "host": "{{ ansible_host }}",
                "rejectUnauthorized": false
{% if editor == 'che' %}
               ,"user": "{{ hlq }}",
                "password": "{{ password }}"
{% endif %}
            },
{% if editor == 'vscode' %}
            "secure": [
                "user",
                "password"
            ],
{% endif %}
            "profiles": {
                "zosmf": {
                    "type": "zosmf",
                    "properties": {
                        "port": {{ zosmf_port }}
                    }
                },
                "rseapi": {
                    "type": "rse",
                    "properties": {
                        "port": {{ rse_api_port }},
                        "basePath": "rseapi",
                        "protocol": "https"
                    }
                },
                "ssh": {
                    "type": "ssh",
                    "properties": {
                        "port": {{ ssh_port }}
                    }
                },
                "zOpenDebug": {
                    "type": "zOpenDebug",
                    "properties": {
                        "dpsPort": {{ debug_profile_service_port_ssl }},
                        "rdsPort": {{ remote_debug_service_port }},
                        "dpsContextRoot": "api/v1",
                        "dpsSecured": true,
                        "uuid": "a617f4e6-2959-450f-82fa-105c749f8dfd"
                    }
                }
            }
        }
    },
    "defaults": {
        "zosmf": "{{ host }}.zosmf",
        "rse": "{{ host }}.rseapi",
        "ssh": "{{ host }}.ssh",
        "zOpenDebug": "{{ host }}.zOpenDebug"
    }
{% if editor == 'vscode' %}
    ,"autoStore": true
{% endif %}
}
