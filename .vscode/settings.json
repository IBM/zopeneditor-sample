{
    "editor.autoSave": "off",
    "application.confirmExit": "always",
    "preview.openByDefault": true,
    "zopeneditor.propertygroups": [
        {
            "name": "SAM-Copybooks",
            "type": "local",
            "syslib": [
                "**/COPYBOOK",
                "**/INCLUDES",
                "**/ASMCOPY"
            ],
            "libraries": [
                {
                    "name": "MYFILE",
                    "locations": [
                        "**/COPYLIB",
                        "**/INCLUDELIB"
                    ]
                }
            ]
        },
        {
            "name": "MVS-Cobol-lib",
            "type": "mvs",
            "language": "cobol",
            "syslib": [
                "IBMUSER.SAMPLE.COBCOPY"
            ],
            "libraries": [
                {
                    "name": "MYLIB",
                    "locations": [
                        "IBMUSER.SAMPLE.COPYLIB"
                    ]
                }
            ]
        },
        {
            "name": "MVS-PL1-lib",
            "type": "mvs",
            "language": "pl1",
            "syslib": [
                "IBMUSER.SAMPLE.PLINC"
            ],
            "libraries": [
                {
                    "name": "MYLIB",
                    "locations": [
                        "IBMUSER.SAMPLE.PLI.INCLLIB"
                    ]
                }
            ]
        },
        {
            "name": "FIB-Includes",
            "type": "local",
            "language": "rexx",
            "syslib": [
                "**/REXXINC"
            ],
            "libraries": [
                {
                    "name": "REXXLIB",
                    "locations": [
                        "**/REXXLIB"
                    ]
                }
            ]
        }
    ],
    "zopeneditor.userbuild.workspaceSettings": {
        "dbb": {
            "command": "$DBB_HOME/bin/groovyz -DBB_PERSONAL_DAEMON",
            "commandArgs": [],
            "buildScriptPath": "${zopeneditor.userbuild.userSettings.dbbWorkspace}/dbb-zappbuild/build.groovy",
            "buildScriptArgs": [
                "--userBuild",
                "--workspace ${zopeneditor.userbuild.userSettings.dbbWorkspace}",
                "--application .",
                "--hlq ${zopeneditor.userbuild.userSettings.dbbHlq}",
                "--outDir ${zopeneditor.userbuild.userSettings.dbbLogDir}",
                "--dependencyFile ${dependencyFile}"
            ],
            "additionalDependencies": [
                "application-conf"
            ]
        }
    }
}
